{
	"rules": {
		"semicolon": [
			true,
			"never"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "space-before-function-paren": true,
    "no-unused-variable": true,
    "no-trailing-whitespace": true,
		"whitespace": [
			true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "never"
        },
				"singleline": "never"
			}
		]
	},
	"linterOptions": {
		"exclude": [
			"node_modules"
		]
	}
}